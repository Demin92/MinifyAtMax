<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <Button
            android:id="@+id/gl_nearest_mipmap_nearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GL_NEAREST_MIPMAP_NEAREST" />

    <Button
            android:id="@+id/gl_nearest_mipmap_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="GL_NEAREST_MIPMAP_LINEAR" />

    <Button
            android:id="@+id/gl_linear_mipmap_nearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="GL_LINEAR_MIPMAP_NEAREST" />

    <Button
            android:id="@+id/gl_linear_mipmap_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="GL_LINEAR_MIPMAP_LINEAR" />


    <FrameLayout
            android:id="@+id/container"
            android:layout_width="@dimen/scale_size"
            android:layout_height="@dimen/scale_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scale_linear" />

</LinearLayout>